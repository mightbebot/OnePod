<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_80"
    tools:context=".PlayerActivity">

    <!--Relative Layout to store TextView for description and ImageView for audio image-->
    <RelativeLayout
        android:id="@+id/relativeLayoutDescription"
        android:layout_centerHorizontal="true"
        android:layout_width="400dp"
        android:layout_height="390dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/layout_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/audioDescription"
            android:layout_width="380dp"
            android:layout_height="210dp"
            android:layout_marginTop="170dp"
            android:layout_centerHorizontal="true"
            android:text="Select Audio File To Load Description"
            android:textAlignment="center"
            android:textSize="15dp"
            android:scrollbars="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/audioImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <!--Relative Layout to store functional objects of audio player-->
    <RelativeLayout
        android:id="@+id/relativeLayoutPlayer"
        android:layout_centerHorizontal="true"
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/layout_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayoutDescription" >

        <TextView
            android:id="@+id/audioCurrTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="00:00"
            android:layout_alignTop="@+id/seekBar"
            android:layout_alignStart="@+id/seekBar"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/audioTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="00:00"
            android:layout_alignTop="@+id/seekBar"
            android:layout_alignEnd="@+id/seekBar"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:id="@+id/audioName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text="Select Audio File To Load Title"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@+id/seekBar"
            android:layout_marginTop="-40dp"/>

        <SeekBar
            android:id="@+id/seekBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pause"
            android:layout_marginTop="-40dp"
            android:thumbTint="@color/blue_4_darkblue"
            android:progressTint="@color/blue_4_darkblue"/>

        <Button
            android:id="@+id/play"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_alignTop="@+id/pause"
            android:layout_toLeftOf="@+id/pause"
            android:layout_marginEnd="10dp"
            android:onClick="play"
            android:background="@drawable/button_play"
            android:backgroundTint = "@color/blue_4_darkblue"/>

        <Button
            android:id="@+id/pause"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:onClick="pause"
            android:background="@drawable/button_pause"
            android:backgroundTint = "@color/blue_4_darkblue"/>

        <Button
            android:id="@+id/stop"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_alignTop="@+id/pause"
            android:layout_toRightOf="@+id/pause"
            android:layout_marginStart="10dp"
            android:onClick="stop"
            android:background="@drawable/button_stop"
            android:backgroundTint = "@color/blue_4_darkblue" />

        <Button
            android:id="@+id/fastNext"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_alignTop="@+id/pause"
            android:layout_toRightOf="@+id/stop"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_fastnext"
            android:backgroundTint = "@color/blue_4_darkblue" />

        <Button
            android:id="@+id/fastPrevious"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_alignTop="@+id/pause"
            android:layout_toLeftOf="@+id/play"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_fastprevious"
            android:backgroundTint = "@color/blue_4_darkblue" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
